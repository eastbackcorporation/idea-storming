<% if notice.present? %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>


<h1><%= Theme.model_name.human%></h1>



<div class="actions">
  <% if user_signed_in? %>
    <%= link_to t("helpers.links.new"), new_theme_path, class: 'btn btn-light active right' %>
  <% else %>
    <%= t(".plese_login")%>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Theme.human_attribute_name :category %></th>
      <th><%= Theme.human_attribute_name :title %></th>
      <th><%= Theme.human_attribute_name :description %></th>
      <th><%= Theme.human_attribute_name :owner %></th>
      <th><%= Theme.human_attribute_name :tags %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @themes.includes(:category,:owner).each do |theme| %>
      <tr>
        <td><%= theme.category.name %></td>
        <td><%= theme.title %></td>
        <td><%= theme.description %></td>
        <td><%= theme.owner.nick_name %></td>
        <td>
          <% theme.tags.pluck(:name).each do |tag_name| %>
            <span class="badge badge-primary"><%= tag_name %></span>
          <% end %>
        </td>
        <td><%= link_to t("helpers.links.show"), theme %></td>
        <td><%= link_to t("helpers.links.edit"), edit_theme_path(theme) if theme.owner?(current_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>
<%= link_to "TOP", root_path %>
