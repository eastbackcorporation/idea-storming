<table class="table">
  <thead>
    <tr>
      <th><%= Theme.model_name.human %></th>
      <th><%= Theme.human_attribute_name :idea_count %></th>
      <th><%= Theme.human_attribute_name :updated_at %></th>
    </tr>
  </thead>
  <tbody>
    <% themes.each do |theme| %>
      <tr>
        <td><%= link_to theme.title, theme_path(theme) %></td>
        <td><%= theme.ideas.count %></td>
        <td><%= l(theme.updated_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='row'>
  <div class='col-12'>
    <div class='d-flex justify-content-center'>
      <%= paginate themes %>
    </div>
  </div>
</div>
