<% if notice.present? %>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    ã€€<span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="pb-4">
  <%= link_to "#{Theme.model_name.human} #{t('helpers.index')}", themes_path, class: "btn btn-outline-secondary" %>
  <%= link_to "#{Theme.model_name.human} #{t('helpers.links.new')}", new_theme_path, class: "btn btn-outline-secondary" %>
</div>

<div class="row">
  <section class="col-sm-6 col-12">
    <div class="card">
      <div class="card-header">
        <strong><%= t(".owner_themes") %></strong>
      </div>
      <div class="card-body">
        <% if @owner_themes.present? %>
          <%= render "themes", themes: @owner_themes %>
        <% else %>
          <%= t(".blank", name: t(".owner_themes_title"))%>
        <% end %>
      </div>
    </div>
  </section>

  <section class="col-sm-6 col-12">
    <div class="card">
      <div class="card-header">
        <strong><%= t(".joining_themes") %></strong>
      </div>
      <div class="card-body">
        <% if @joining_themes.present? %>
          <%= render "themes", themes: @joining_themes %>
        <% else %>
          <%= t(".blank", name: t(".joining_themes"))%>
        <% end %>
      </div>
    </div>
  </section>
</div>